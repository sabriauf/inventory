<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_invoice_add_item_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:maxLines="1"
        android:text="@string/total"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/textMedium"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/text_invoice_add_item_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="24dp" />

    <TextView
        android:id="@+id/text_invoice_add_item_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/textMedium"
        app:layout_constraintBottom_toBottomOf="@+id/text_invoice_add_item_total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_invoice_add_item_total"
        tools:text="Rs. 3,000.00" />

    <TextView
        android:id="@+id/text_invoice_add_item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/textSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_invoice_add_item_total"
        tools:text="2020.12.20" />

</androidx.constraintlayout.widget.ConstraintLayout>