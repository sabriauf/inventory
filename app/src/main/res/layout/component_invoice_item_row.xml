<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_invoice_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextTertiary"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/textPrimary"
        app:layout_constraintEnd_toStartOf="@+id/text_invoice_item_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#34353-Plastic Handle p24" />

    <TextView
        android:id="@+id/text_invoice_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextTertiary"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/textPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rs. 1,500.00" />

    <TextView
        android:id="@+id/text_invoice_item_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorTextTertiary"
        android:fontFamily="@font/roboto_light"
        android:textSize="@dimen/textTertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_invoice_item_name"
        app:layout_constraintTop_toBottomOf="@+id/text_invoice_item_name"
        tools:text="Rs. 200 \t Qty:2" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorMainBack"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_invoice_item_unit" />

</androidx.constraintlayout.widget.ConstraintLayout>