<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/textMedium"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item Name" />

    <TextView
        android:id="@+id/text_item_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/textTertiary"
        android:fontFamily="@font/roboto_light"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="@+id/text_item_name"
        app:layout_constraintStart_toStartOf="@+id/text_item_name"
        app:layout_constraintTop_toBottomOf="@+id/text_item_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="No 1C, 4th Lane, Rathmalana" />

</androidx.constraintlayout.widget.ConstraintLayout>